<div class="container w-50 p-4 mx-auto border bg-white rounded shadow-sm mt-5">
  <h1 class="text-primary text-center mb-4">Your Lists</h1>

  <ul class="list-unstyled">
    <% @lists.each do |list| %>
      <li class="d-flex justify-content-between align-items-center py-3 border-bottom">
        <%= link_to list.name, list_path(list), class: "text-dark text-decoration-none fs-5" %>
        <%= link_to "", list_path(list), class: "fa-solid fa-arrow-right text-muted ms-2", title: "View list" %>
      </li>
    <% end %>
  </ul>

  <div class="text-center mt-4">
    <%= link_to "Create New List", new_list_path, class: "btn btn-primary px-4 py-2" %>
  </div>
</div>
